<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imabus"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/business_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Logo"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/s16" />

        <TextView
            android:id="@+id/business_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="Nygatan 20 27234 Paris, French"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/s12" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/step"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pick_up_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginBottom="1dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/step0"
                        android:text="@string/th_ng_tin_ng_d_ng"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/s14" />

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/mo_ta"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/s14" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                card_view:cardElevation="1dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/s14" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/support_email"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/s14" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Phone:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/s14" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/support_phone"

                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/s14" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="@dimen/step1"
                android:id="@+id/termpolicy"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/PolicyTerm1"
                android:textColor="#002AFF"
                android:textSize="@dimen/s14" />


            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="@dimen/step1"
                android:id="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/c_u_h_i_th_ng_g_p"
                android:textColor="#002AFF"
                android:textSize="@dimen/s14" />



            <LinearLayout
                android:layout_marginTop="@dimen/step1"
                android:layout_marginBottom="@dimen/step"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_weight="1"
                    android:layout_marginEnd="1dp"
                    android:id="@+id/contact_us"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_orange_background"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/li_n_h_qua_email"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/call_us"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_orange_background"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="1dp"
                    android:text="@string/g_i_cho_ch_ng_t_i"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>
