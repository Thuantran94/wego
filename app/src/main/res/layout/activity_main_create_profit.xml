<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/relative_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <TextView
                android:layout_marginTop="24dp"
                android:textColor="@color/colorPrimary"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/InforAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <ScrollView
            android:layout_marginTop="?actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/step"
                    android:layout_marginBottom="@dimen/step"
                    android:id="@+id/pavatar0"
                    android:src="@drawable/ic_avatarboy"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    />


                <EditText
                    android:background="@drawable/background_edittext"
                    android:layout_marginRight="@dimen/step1"
                    android:layout_marginLeft="@dimen/step1"
                    android:layout_marginBottom="@dimen/step"
                    android:hint="@string/Fullname"
                    android:textColor="@color/colorOrange"
                    android:inputType="textPersonName"
                    android:id="@+id/edName"
                    android:maxLength="20"
                    android:paddingStart="@dimen/step1"

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    tools:ignore="RtlSymmetry" />


                <EditText
                    android:background="@drawable/background_edittext"
                    android:layout_marginRight="@dimen/step1"
                    android:layout_marginLeft="@dimen/step1"
                    android:layout_marginBottom="@dimen/step"
                    android:hint="@string/hint_login"
                    android:textColor="@color/colorOrange"
                    android:inputType="number"
                    android:id="@+id/edPhone"
                    android:paddingStart="@dimen/step1"
                    android:maxLength="10"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    tools:ignore="RtlSymmetry" />



                <EditText
                    android:background="@drawable/background_edittext"
                    android:layout_marginRight="@dimen/step1"
                    android:layout_marginLeft="@dimen/step1"
                    android:layout_marginBottom="@dimen/step"
                    android:hint="Email"
                    android:textColor="@color/colorOrange"
                    android:inputType="textEmailAddress"
                    android:id="@+id/edEmail"
                    android:paddingStart="@dimen/step1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    tools:ignore="RtlSymmetry" />



                <RadioGroup
                    android:layout_marginRight="@dimen/step1"
                    android:layout_marginLeft="@dimen/step1"
                    android:layout_marginBottom="@dimen/step"
                    android:id="@+id/btGender"
                    android:background="@drawable/background_toggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/male"
                        android:background="@drawable/background_toggle_widget_bounded"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Male"
                        android:textColor="@drawable/button_text"
                        android:textSize="@dimen/s14"
                        android:paddingEnd="@dimen/step2"
                        android:paddingStart="0dp"
                        app:buttonTint="@android:color/transparent" />

                    <RadioButton
                        android:id="@+id/female"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/background_toggle_widget"
                        android:gravity="center"
                        android:text="@string/Female"
                        android:textColor="@drawable/button_text"
                        android:textSize="@dimen/s14"
                        android:paddingEnd="@dimen/step2"
                        android:paddingStart="0dp"
                        app:buttonTint="@android:color/transparent" />
                </RadioGroup>




                <LinearLayout
                    android:padding="@dimen/step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:layout_marginBottom="@dimen/step"
                        android:id="@+id/checkDK"
                        android:paddingTop="@dimen/step"
                        android:paddingBottom="@dimen/step"
                        android:paddingEnd="@dimen/step0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="14sp"
                        android:text="@string/Accept" />


                    <TextView
                        android:id="@+id/iwww"
                        android:layout_marginBottom="@dimen/step0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/step"
                        android:paddingBottom="@dimen/step"
                        android:text="@string/PolicyTerm"
                        android:textSize="14sp"
                        android:textColor="#002AFF"
                        />


                </LinearLayout>



                <Button
                    android:layout_marginBottom="@dimen/step"
                    android:textAllCaps="false"
                    android:id="@+id/btFinishCreateAcc"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:text="@string/xac_nhan"
                    android:background="@drawable/button_orange_background"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </ScrollView>




</FrameLayout>