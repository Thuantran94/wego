<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@color/white"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    app:behavior_peekHeight="500dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/step"

        android:text="@string/changetime"
        android:textAlignment="viewStart"
        android:textSize="15dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imtime1"
            android:layout_marginEnd="@dimen/step"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_remove_circle_outline_black_30dp"
            />


        <TextView
            android:id="@+id/twTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="10:00"
            android:minWidth="200dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="35sp" />



        <ImageView
            android:id="@+id/imtime2"
            android:layout_marginStart="@dimen/step"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle_outline_black_30dp"
            />



    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/step"
        android:text="@string/ngh_m_t_m_c_gi_m_i"
        android:textAlignment="viewStart"
        android:textSize="15dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imprix1"
            android:layout_marginEnd="@dimen/step"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_remove_circle_outline_black_30dp"
            />

        <TextView
            android:id="@+id/twPrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minWidth="200dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/imprix2"
            android:layout_marginStart="@dimen/step"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_circle_outline_black_30dp"
            />



    </LinearLayout>




    <Button

        android:id="@+id/btdAcceptSheet"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/button_orange_background"
        android:layout_centerInParent="true"

        android:layout_margin="@dimen/step"
        android:text="Xác Nhận" />

</LinearLayout>