<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/headerDr"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/imheaderavatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/step0"
        android:layout_marginBottom="@dimen/step"
        android:paddingTop="@dimen/nav_header_vertical_spacing" />



    <ImageView
        android:layout_marginStart="@dimen/step0"
        android:layout_toEndOf="@id/imheaderavatar"
        android:paddingStart="2dp"
        android:paddingEnd="0dp"
        android:paddingTop="2dp"
        android:id="@+id/coin"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_payment_white_24dp"/>

    <TextView
        android:id="@+id/points"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s16"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_toEndOf="@id/coin"/>

    <TextView
        android:text="DT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s16"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginStart="2dp"
        android:layout_toEndOf="@id/points"/>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="@dimen/step"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:background="@drawable/background_review"
        android:orientation="horizontal"
        android:id="@+id/pdanhgia"
        android:layout_marginStart="@dimen/step0"
        android:layout_below="@id/points"
        android:layout_toEndOf="@id/imheaderavatar"
        >
        <ImageView
            android:padding="2dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"/>

        <TextView
            android:id="@+id/npdanhgia"
            android:padding="2dp"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"
            android:background="@drawable/background_edittext"
            android:layout_width="30dp"
            android:maxLength="3"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginStart="@dimen/step0"
            android:padding="2dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rating"/>

        <TextView
            android:textColor="@color/colorBlue"
            android:id="@+id/ndanhgia"
            android:padding="2dp"
            android:background="@drawable/background_edittext"
            android:layout_width="wrap_content"
            android:minWidth="30dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <TextView
        android:id="@+id/tvheadername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imheaderavatar"
        android:layout_marginStart="3dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@id/tvheadername"
        android:textSize="14sp"
        android:id="@+id/twheaderPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="5dp" />


</RelativeLayout>
