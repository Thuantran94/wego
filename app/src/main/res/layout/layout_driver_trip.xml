<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_textview_white_orange"
    android:layout_marginStart="@dimen/step0"
    android:layout_marginEnd="@dimen/step0"
    android:layout_marginTop="2dp"
    android:padding="5dp"
    >



    <LinearLayout
        android:id="@+id/lntod"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginBottom="@dimen/step0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:drawableStart="@drawable/ic_date_range_white_16dp"
            android:background="@drawable/background_textview_white_orange"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:padding="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="6"
            android:text="00/00/0000 at 00:00"
            android:id="@+id/ddate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:background="@drawable/background_textview_white_orange"
            android:drawableEnd="@drawable/ic_carseat"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:padding="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1.5"
            android:id="@+id/seat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="12sp"/>

        <TextView
            android:layout_weight="2.5"
            android:id="@+id/dstypecar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_textview_white_orange"
            android:textColor="@color/colorPrimary"
            android:drawableStart="@drawable/ic_directions_car_white_16dp"
            android:textAlignment="center"
            android:padding="2dp"
            android:text="xe may"
            android:textSize="12sp" />

    </LinearLayout>




    <TextView
        android:drawableStart="@drawable/ic_my_location_orange_24dp"
        android:text="dia chi xuat phat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ddepart"
        android:lines="2"
        android:layout_below="@id/lntod"
        android:textSize="@dimen/s16"
        android:drawablePadding="@dimen/step0"

        android:textColor="#0055FF"/>
    <TextView
        android:drawableStart="@drawable/ic_place_orange_24dp"
        android:text="dia chi den"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ddestination"
        android:lines="2"
        android:textSize="@dimen/s16"
        android:drawablePadding="@dimen/step0"
        android:layout_below="@id/ddepart"
        android:textColor="#0055FF"/>






</RelativeLayout>